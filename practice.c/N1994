#include<iostream>

using namespace std;
int max(int a,int b)
{    if(a>b)
	return a;
	else
	return b;
}
int main()
{   int a[1000][1000];
    int dp[1000][1000];
	int r;
	cin>>r;
	for(int i=1;i<=r;i++)
	for(int j=1;j<=i;j++)
	cin>>a[i][j];
	
	 for(int m=1;m<=r;m++)
	  dp[r][m]=a[r][m];
	  
	for(int i=r-1;i>=1;i--)
	 for(int j=1;j<=i;j++)
	  dp[i][j]=max(dp[i+1][j],dp[i+1][j+1])+a[i][j];
	  cout<<dp[1][1];
	  return 0;
	}
