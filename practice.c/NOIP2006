#include<stdio.h>
int max(int a,int b)
{
	return a>b?a:b;
}
main()
{     
	int n,m;
	scanf("%d %d",&n,&m);
	int mo[30];
	int ipt[30];
	int i;
	for(i=0;i<m;i++)
	 scanf("%d %d",&mo[i],&ipt[i]);
	 
	 int dp[30000];
	 
	 for(int i=0;i<m;i++)
	  for(int j=n;j>=mo[i];j--)
	  dp[j]=max(dp[j],dp[j-mo[i]]+ipt[i]*mo[i]);
	  printf("%d",dp[n]);
 } 
